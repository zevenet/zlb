#!/bin/sh

DEBUG=""
NFTBIN=/usr/local/sbin/nft
#NFTBIN=`which nft`
GLOBALCONF="/usr/local/zevenet/config/global.conf"
if [ -f "$GLOBALCONF" ]; then
	# debug
	VAR=`grep ^.debug= "$GLOBALCONF" | awk -F'"' '{ printf $2 }' 2> /dev/null`
	if [ ! -z $VAR ] && [ "$VAR" != "0" ]; then
		DEBUG="-l $VAR"
	fi
	# nft binary
	VAR=`grep ^.nft_bin= "$GLOBALCONF" | awk -F'"' '{ printf $2 }' 2> /dev/null`
	if [ ! -z $VAR ] && [ -e "$VAR" ]; then
		NFTBIN="$VAR"
	fi
fi

DESC="nftlb daemon service"
NAME=nftlb
DAEMON=/usr/local/zevenet/app/nftlb/sbin/nftlb
DAEMON_ARGS="$DEBUG -H 127.0.0.1 -k HoLa -P 27"
PIDFILE=/var/run/$NAME.pid
SCRIPTNAME=/etc/init.d/$NAME

[ -x "$DAEMON" ] || exit 0
[ -r /etc/default/$NAME ] && . /etc/default/$NAME
. /lib/init/vars.sh
. /lib/lsb/init-functions

do_start()
{
	start-stop-daemon --start --quiet --oknodo --background --make-pidfile --pidfile $PIDFILE --exec $DAEMON -- $DAEMON_ARGS
	[ "$?" -ne 0 ] && return 2
}

do_stop() {
	start-stop-daemon --stop --signal 1 --quiet --remove-pidfile --pidfile $PIDFILE --name $NAME
	PID=`pidof nftlb`
	[ -n "$PID" ] && kill -9 $PID
	`$NFTBIN delete table ip nftlb 2> /dev/null`
	`$NFTBIN delete table netdev nftlb 2> /dev/null`
	[ -f $PIDFILE ] && rm -i $PIDFILE
}

case "$1" in
	start)
		echo "Starting $DESC" "$NAME"
		do_start
		case "$?" in
		0|1) return 0 ;;
		2) return 1 ;;
		esac
		;;

	stop)
		echo "Stopping $DESC" "$NAME"
		do_stop
		case "$?" in
		0|1) return 0 ;;
		2) return 1 ;;
		esac
		;;

	status)
		status_of_proc "$DAEMON" "$NAME" && exit 0 || exit $?
		;;

	restart)
		echo "Restarting $DESC" "$NAME"
		do_stop
		case "$?" in
		0|1)
			do_start
			case "$?" in
				0) return 0 ;;
				1) return 1 ;;
				*) return 1 ;;
			esac
			;;
		*)
			return 1	;;
		esac
		;;

	*)
		echo "Usage: $SCRIPTNAME {start|stop|status|restart}" >&2
		exit 3
	;;
esac
